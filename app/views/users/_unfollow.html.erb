<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
             html: { method: :delete }, remote: true) do |f| %>
  <%= f.submit "Unfollow", class: "btn" %>
<% end %>
<!-- NOTE remote: true is used for AJAX
this allows the unfollow and follow button click information 
to be transmitted without a full page refresh -->